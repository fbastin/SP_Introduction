\def\mathstyle#1{%
\def\nameofcounter{#1}    %% counter's name
                          %% environment
{\@ifundefined{chapter}
{\newcounter{\nameofcounter}}
{\newcounter{\nameofcounter}[chapter]}
}
\setcounter{\nameofcounter}{0}
}

\def\numerote#1{%
\@ifundefined{chapter}%
{\arabic{#1}}%
{\thechapter.\arabic{#1}}%
}

\def\mathl#1#2#3{
 \if@twocolumn
   \@restonecoltrue\onecolumn
 \else
   \@restonecolfalse
 \fi
 \@ifundefined{chapter}
   {\section*{#3
              \@mkboth{\MakeUppercase#3}%
                      {\MakeUppercase#3}%
   }\@starttoc{#2}}%
   {\chapter*{#3
              \@mkboth{\MakeUppercase#3}%
                      {\MakeUppercase#3}%
   }\@starttoc{#2}}
   \if@restonecol\twocolumn\fi  % restaure le mode 2 colonnes si nécessaire
}




